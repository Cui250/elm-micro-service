<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="ynu.edu.order_service.mapper.CartMapper">

    <resultMap type="ynu.edu.order_service.po.Cart" id="cartResultMap">
        <id column="cart_id" property="cartId"/>
        <result column="food_id" property="foodId"/>
        <result column="food_name" property="foodName"/>
        <result column="food_img" property="foodImg"/>
        <result column="food_price" property="foodPrice"/>
        <result column="business_id" property="businessId"/>
        <result column="business_name" property="businessName"/>
        <result column="user_id" property="userId"/>
        <result column="quantity" property="quantity"/>
    </resultMap>

    <select id="listCart" parameterType="ynu.edu.order_service.po.Cart" resultMap="cartResultMap">
        SELECT * FROM cart
        <where>
            user_id = #{userId}
            <if test="businessId != null">
                AND business_id = #{businessId}
            </if>
        </where>
        ORDER BY cart_id
    </select>

    <delete id="removeCart" parameterType="ynu.edu.order_service.po.Cart">
        DELETE FROM cart
        <where>
            user_id = #{userId}
            AND business_id = #{businessId}
            <if test="foodId != null">
                AND food_id = #{foodId}
            </if>
        </where>
    </delete>

</mapper>