<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="ynu.edu.order_service.mapper.OrderDetailetMapper">

    <insert id="saveOrderDetailetBatch" parameterType="ynu.edu.order_service.po.OrderDetailet">
        INSERT INTO order_detailet(od_id, order_id, food_id, food_name, food_img, food_price, quantity)
        VALUES
        <foreach collection="list" item="od" separator=",">
            (null, #{od.orderId}, #{od.foodId}, #{od.foodName}, #{od.foodImg}, #{od.foodPrice}, #{od.quantity})
        </foreach>
    </insert>

    <resultMap type="ynu.edu.order_service.po.OrderDetailet" id="orderDetailetResultMap">
        <id column="od_id" property="odId"/>
        <result column="order_id" property="orderId"/>
        <result column="food_id" property="foodId"/>
        <result column="food_name" property="foodName"/>
        <result column="food_img" property="foodImg"/>
        <result column="food_price" property="foodPrice"/>
        <result column="quantity" property="quantity"/>
    </resultMap>

    <select id="listOrderDetailetByOrderId" parameterType="Integer" resultMap="orderDetailetResultMap">
        SELECT * FROM order_detailet WHERE order_id = #{orderId}
    </select>

</mapper>